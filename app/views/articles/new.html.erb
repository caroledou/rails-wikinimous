<h1>Add a new article</h1>
<%= form_for(@article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<%= link_to "↩️ Back to list", articles_path %>

